          <div class="grid-y input-group">
            <label for="homeSlideritem1">متن اول</label>
            <input name="homeSlideritem1" type="text" value="<%= homeSlider.homeSlideritem1 %>">
          </div>
          <div class="grid-y input-group">
            <label for="homeSlidericonItem1">آیکون متن اول</label>
            <input name="homeSlidericonItem1" type="text" value="<%= homeSlider.homeSlidericonItem1 %>">
          </div>
        </div>
        <div class="input-wrap grid-x">
          <div class="grid-y input-group">
            <label for="homeSlideritem2">متن دوم</label>
            <input name="homeSlideritem2" type="text" value="<%= homeSlider.homeSlideritem2 %>">
