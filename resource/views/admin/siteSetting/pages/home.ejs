<%- contentFor('body') %>
<div class="site-pages w100 grid align-center">
  <div class="container grid-y">
    <div class="controller grid-y">
      <div class="mark grid-x-no align-middle">
        <i class="fas fa-home"></i>
        <span class="name">صفحه اصلی</span>
      </div>
    </div>
    <div class="post-info">
      <div class="post-box w100">
        <header class="navyBlue">
          <h4>Home Slider</h4>
        </header>
        <content>
          <form class="HomeSliderSetting">
            <div class="input-wrap grid-x">
              <div class="grid-y input-group">
                <label for="homeSlideritem1">متن اول</label>
                <input name="homeSlideritem1" type="text" value="<%= homePage.homeSlideritem1 %>">
              </div>
              <div class="grid-y input-group">
                <label for="homeSlidericonItem1">آیکون متن اول</label>
                <input class="input-en" name="homeSlidericonItem1" type="text" value="<%= homePage.homeSlidericonItem1 %>">
              </div>
            </div>
            <div class="input-wrap grid-x">
              <div class="grid-y input-group">
                <label for="homeSlideritem2">متن دوم</label>
                <input name="homeSlideritem2" type="text" value="<%= homePage.homeSlideritem2 %>">
              </div>
              <div class="grid-y input-group">
                <label for="homeSlidericonItem2">آیکون متن دوم</label>
                <input class="input-en" name="homeSlidericonItem2" type="text" value="<%= homePage.homeSlidericonItem2 %>">
              </div>
            </div>
            <div class="input-wrap grid-x">
              <div class="grid-y input-group">
                <label for="homeSlideritem3">متن سوم</label>
                <input name="homeSlideritem3" type="text" value="<%= homePage.homeSlideritem3 %>">
              </div>
              <div class="grid-y input-group">
                <label for="homeSlidericonItem3">آیکون متن سوم</label>
                <input class="input-en" name="homeSlidericonItem3" type="text" value="<%= homePage.homeSlidericonItem3 %>">
              </div>
            </div>
            <div class="input-wrap grid align-left">
              <div class="grid-y input-group">
                <label for="photo">تصویر پس زمینه</label>
                <div class="grid align-center">
                  <div class="image-box box1 grid align-center-middle">
                    <% if(typeof homePage.homeSliderImageUrl !== 'undefined') { %>
                      <img src="<%= homePage.homeSliderImageUrl.destination %>">  
                    <% } else { %>
                      <img src="">
                    <% } %>  
                  </div>
                </div>
                <input class="input-en" name="photo" type="file">
              </div>
            </div>
            <div class="input-wrap grid align-left">
              <button type="submit" class="btn btn-primary grid align-center-middle">
                <span>ثبت اطلاعات</span>
              </button>
            </div>
          </form>
        </content>
      </div>
    </div>
    <div class="post-info">
