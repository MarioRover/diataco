<script>
  const setImageUrl = (imgUrl) => {
    
    const {homeSliderphoto,aboutUsphoto,parallaxphoto} = imgUrl;

    let homeSliderImg = $('.input-group.homeSliderphoto .image');
    if(typeof homeSliderphoto !== 'undefined') {
      $(homeSliderImg).attr('src', `${homeSliderphoto}`);
    }

    let aboutUsImg = $('.input-group.aboutUsphoto .image');
    if(typeof aboutUsphoto !== 'undefined') {
      $(aboutUsImg).attr('src', `${aboutUsphoto}`);
    }

    let parallaxImg = $('.input-group.parallaxphoto .image');
    if(typeof parallaxphoto !== 'undefined') {
      $(parallaxImg).attr('src', `${parallaxphoto}`);
    }  
  }
</script>
