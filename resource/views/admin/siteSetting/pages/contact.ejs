<%- contentFor('panel-header') %>
<a class="active grid-x-no align-middle">
  <i class="fas fa-cog"></i>
  <span>تنظیمات سایت</span>
</a>
<i class="arrow far fa-angle-left"></i>
<a href="/admin/site-setting/pages" class="grid-x-no align-middle">
  <i class="fal fa-tv"></i>
  <span>صفحات سایت</span>
</a>
<i class="arrow far fa-angle-left"></i>
<a href="/admin/site-setting/pages" class="grid-x-no align-middle">
  <span>تماس با ما</span>
</a>
<%- contentFor('body') %>
<div class="site-pages w100 grid align-center">
  <div class="container">
    <div class="post-info">
      <div class="post-box w100">
        <header class="navyBlue">
          <h4>Contact</h4>
        </header>
        <content>
          <form class="contactPageSetting">
            <div class="input-wrap grid-x">
              <div class="grid-y input-group">
                  <label for="telephone">تلفن شرکت</label>
                  <input name="telephone" type="text" value="<%= contactPage.telephone %>">
              </div>
              <div class="grid-y input-group">
                <label for="email">ایمیل شرکت</label>
                <input class="input-en" name="email" type="text" value="<%= contactPage.email %>">
              </div>
            </div>
            <div class="input-wrap grid-x">
              <div class="grid-y input-group w100">
                <label for="address">آدرس شرکت</label>
                <input name="address" type="text" value="<%= contactPage.address %>">
              </div>
            </div>
            <div class="input-wrap grid align-left">
              <div class="grid-y input-group">
                <label for="photo">تصویر پس زمینه</label>
                <div class="grid align-center">
                  <div class="image-box box1 grid align-center-middle">
                    <% if(typeof contactPage.imageUrl !== 'undefined') { %>
                      <img src="<%= contactPage.imageUrl.destination %>">  
                    <% } else { %>
                      <img src="">
                    <% } %>  
                  </div>
                </div>
                <input class="input-en" name="photo" type="file">
              </div>
            </div>
            <div class="input-wrap grid align-left">
              <button type="submit" class="btn btn-primary grid align-center-middle">
                <span>ثبت اطلاعات</span>
              </button>
            </div>
          </form>
        </content>
      </div>
      <div class="post-info">
        <div class="post-box w100">
          <header class="navyBlue">
            <h4>Contact Page Tags</h4>
          </header>
          <content>
            <form class="contactPageTags">
              <div class="input-wrap grid-x">
                <div class="grid-y input-group w100">
                  <label for="descTags">Description Tags</label>
                  <input name="descTags" type="text" value="<%= contactPage.descTags %>">
                </div>
              </div>
              <div class="input-wrap grid-x">
                <div class="grid-y input-group w100">
                  <label for="keyTags">keywords Tags</label>
                  <input name="keyTags" type="text" value="<%= contactPage.keyTags %>">
                </div>
              </div>
              <div class="input-wrap grid align-left">
                <button type="submit" class="btn btn-primary grid align-center-middle">
                  <span>ثبت اطلاعات</span>
                </button>
              </div>
            </form>
          </content>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(".contactPageSetting input[name='photo']").change(function () {
    readURL2(this, "1");
  });
  $(".contactPageTags input[name='descTags']").tagify();
  $(".contactPageTags input[name='keyTags']").tagify();
</script>

