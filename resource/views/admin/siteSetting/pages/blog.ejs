<%- contentFor('panel-header') %>
<div class="grid-x-no align-middle">
  <i class="fas fa-cog"></i>
  <span>تنظیمات سایت</span>
</div>
<i class="arrow far fa-angle-left"></i>
<a href="/admin/site-setting/pages" class="grid-x-no align-middle">
  <i class="fal fa-tv"></i>
  <span>صفحات سایت</span>
</a>
<i class="arrow far fa-angle-left"></i>
<a href="/admin/site-setting/pages/blog" class="active grid-x-no align-middle">
  <span>وبلاگ</span>
</a>
<%- contentFor('body') %>
<div class="site-pages w100 grid align-center">
  <div class="container grid-y">
    <div class="controller grid-y">
      <div class="mark grid-x-no align-middle">
        <i class="far fa-address-card"></i>
        <span class="name">وبلاگ</span>
      </div>
    </div>
    <div class="post-info">
      <div class="post-box w100">
        <header class="navyBlue">
          <h4>Blog Header</h4>
        </header>
        <content>
          <form class="BlogHeader">
            <div class="input-wrap grid-x">
              <div class="grid-y input-group w100">
                <label for="title">تیتر</label>
                <input name="title" type="text" value="<%= blogPage.title %>">
              </div>
            </div>
            <div class="input-wrap grid align-left">
              <div class="grid-y input-group">
                <label for="photo">تصویر پس زمینه</label>
                <div class="grid align-center">
                  <div class="image-box box1 grid align-center-middle">
                    <% if(typeof blogPage.imageUrl !== 'undefined') { %>
                    <img src="<%= blogPage.imageUrl.destination %>">
                    <% } else { %>
                    <img src="">
                    <% } %>  
                  </div>
                </div>
                <input class="input-en" name="photo" type="file">
              </div>
            </div>
            <div class="input-wrap grid align-left">
              <button type="submit" class="btn btn-primary grid align-center-middle">
                <span>ثبت اطلاعات</span>
              </button>
            </div>
          </form>
        </content>
      </div>
      <div class="post-info">
        <div class="post-box w100">
          <header class="navyBlue">
            <h4>Blog Page Tags</h4>
          </header>
          <content>
            <form class="bogPageTags">
              <div class="input-wrap grid-x">
                <div class="grid-y input-group w100">
                  <label for="descTags">Description Tags</label>
                  <input name="descTags" type="text" value="<%= blogPage.descTags %>">
                </div>
              </div>
              <div class="input-wrap grid-x">
                <div class="grid-y input-group w100">
                  <label for="keyTags">keywords Tags</label>
                  <input name="keyTags" type="text" value="<%= blogPage.keyTags %>">
                </div>
              </div>
              <div class="input-wrap grid align-left">
                <button type="submit" class="btn btn-primary grid align-center-middle">
                  <span>ثبت اطلاعات</span>
                </button>
              </div>
            </form>
          </content>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(".BlogHeader input[name='photo']").change(function () {
    readURL2(this, "1");
  });
  $(".bogPageTags input[name='descTags']").tagify();
  $(".bogPageTags input[name='keyTags']").tagify();
</script>
