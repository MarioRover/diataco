<!DOCTYPE html>
<html lang="fa">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title><%- title || Artakhe %></title>
  <%- include(viewPath('layout/favicon')) %>
  <link rel="stylesheet" href="/css/fonts.css">
  <link rel="stylesheet" href="/css/fontawesome-all.css">
  <link rel="stylesheet" href="/css/setting.css">
  <link rel="stylesheet" href="/plugin/preloader/preloader.css">
  <link rel="stylesheet" href="/plugin/admin/admin.css">
  <link rel="stylesheet" href="/plugin/izitoast/iziToast.css">
  <%- style %>
</head>

<body>
  <main>
    <div id="preloader">
      <div class="wrap grid align-center-middle">
        <div id="preloader-inner"></div>
      </div>
    </div>
    <app-layout class="admin-panel">
      <div class="wrap">
        <%- include(viewPath('admin/layout/sidebar')) -%>
        <div class="main-panel ps grid align-right">
         <div class="panel-wrap grid align-center">
          <div class="container grid-y">
            <div class="header grid align-left align-middle">
              <div class="panel-info grid-x-no">
                <i class="fas fa-bars grid align-center-middle" id="siderbarIcon"></i>
                <div class="route-address">
                  <div class="address grid-x-no align-middle">
                    <%- defineContent('panel-header')%>
                  </div>
                </div>
              </div>
            </div>
            <div class="line-space"></div>
            <content>
              <%- defineContent('body')%>
            </content>
          </div>
         </div>
        </div>
      </div>
    </app-layout>
  </main>
  <script src="/js/Jquery-3.3.1.js"></script>
  <script src="/plugin/preloader/jquery.preloader.min.js"></script>
  <script src="/plugin/preloader/preloader.js"></script>
  <%- script %>
  <script src="/plugin/admin/admin.js"></script>
  <script src="/plugin/izitoast/iziToast.min.js"></script>
  <%- include(viewPath('errors/izitoast')) %>
  <script>
    activeRow('<%- activeRow %>')
  </script>
</body>
</html>