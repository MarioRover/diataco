<section class="wrapper news align-center-middle grid-y parallax">
    <div id="particles-js">
        <canvas class="particles-js-canvas-el" style="width: 100%; height: 100%;" width="1414" height="976">
        </canvas>
    </div>
    <div class="container" data-aos="fade-up" data-aos-duration="2000" data-aos-once="true">
        <div class="header-section mb-2">
            <h3>خبرنامه شرکت ما</h3>
        </div>
        <div class="grid align-around">
            <% if(blogs !== 'undefined') { %>
                <div class="owl-carousel owl-theme">
                <% blogs.forEach(blog => { %>
                    <div class="blog-card grid-y">
                    <a href="/blog/<%= blog.category.slug %>/<%= blog.slug %>" class="head" style="background-image: url('<%= blog.imageUrl.destination %>')"></a>
                    <div class="body grid-y">
                        <div class="date grid align-left mb-1">
                        <span>
                            <%= date(blog.createdAt).format('jD jMMMM jYYYY') %></span>
                        </div>
                        <h4 class="mb-1">
                        <%= blog.title %>
                        </h4>
                        <p class="mb-2">
                        <%= blog.summery.slice(1,130) %> ...</p>
                        <div class="link grid align-left">
                        <a href="/blog/<%= blog.category.slug %>/<%= blog.slug %>">بیشتر بخوانید</a>
                        </div>
                    </div>
                    </div>
                <% }) %>
                </div>
                <div class="carousel grid-x">
                <% blogs.forEach(blog => { %>
                    <div class="blog-card grid-y">
                    <a href="/blog/<%= blog.category.slug %>/<%= blog.slug %>" class="head" style="background-image: url('<%= blog.imageUrl.destination %>')"></a>
                    <div class="body grid-y">
                        <div class="date grid align-left mb-1">
                        <span>
                            <%= date(blog.createdAt).format('jD jMMMM jYYYY') %></span>
                        </div>
