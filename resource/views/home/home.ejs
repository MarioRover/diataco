<%- include(viewPath('home/layout/header'))  %>
<% if(typeof homePage.homeSliderImageUrl !== 'undefined' ) { %>
<section class="homeSlider grid align-center-middle" style="background-image : url('<%= homePage.homeSliderImageUrl.destination %>')">
<% } else { %>
<section class="homeSlider grid align-center-middle" style="background-image: url('/img/wallpaper/web-designing-wallpaper-compressor.jpg')">
<% } %>    
    <div class="grid align-center-middle">
    <div class="grid-y align-center-middle item-1">
        <%- homePage.homeSlidericonItem1 %>
        <h3><%= homePage.homeSlideritem1 %></h3><br>
    </div>
    <div class="grid-y align-center-middle item-2">
        <%- homePage.homeSlidericonItem2 %>
        <h3><%= homePage.homeSlideritem2 %></h3><br>
    </div>
    <div class="grid-y align-center-middle item-3">
        <%- homePage.homeSlidericonItem3 %>
        <h3><%= homePage.homeSlideritem3 %></h3><br>
    </div>
  </div>
</section>
<section class="wrapper aboutUs grid align-center">
    <div class="container" data-aos="fade-up" data-aos-duration="2000" data-aos-once="true">
        <div class="wrap grid align-center align-middle grid-y">
            <% if(typeof siteInfo.logo !== 'undefined' ) { %>
            <img class="logo" src="<%= siteInfo.logo.destination %>" alt="<%= siteInfo.nameEn %>">
            <% } %>
            <h3><%= homePage.aboutUsheader %></h3>
            <p class="align-center"><%= homePage.aboutUsheaderDesc %></p>
            <% if(typeof homePage.aboutUsImageUrl !== 'undefined' ) { %>
            <img src="<%= homePage.aboutUsImageUrl.destination %>">
            <% } else { %>
            <img src="" alt="">
            <% } %>    
        </div>
    </div>
</section>
