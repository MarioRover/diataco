<%- include(viewPath('home/layout/header')) %>
<section class="seo-page w100 grid-y">
  <% if(typeof appPage.background !== 'undefined') { %>
  <div class="header-slider w100" style="background-image: url('<%= appPage.background.destination %>')">
  <% } else { %>  
  <div class="header-slider w100">  
  <% } %>
    <div class="overlay grid align-center-middle">
      <div class="container">
        <h2><%= appPage.title %></h2>
      </div>
    </div>
  </div>
  <div class="seo-desc wrapper grid align-center">
  <div class="container">
    <div class="wrap w100">
      <div class="decription">
        <%- appPage.desc %>
      </div>
    </div>
  </div>
</div>
<section class="wrapper products-tab grid align-center-middle ">
    <div class="container" data-aos="fade-up" data-aos-duration="2000" data-aos-once="true">
        <div class="header-section grid align-center-middle">
            <h3>نمونه کار های شرکت ما</h3>
            </div>
            <br>
            <div class="product-wrap grid-x align-around">
                <div class="owl-carousel owl-theme">
                    <% applications.forEach(app => { %>
                    <div class="item card" onclick="">
                        <img src="<%= app.previewImage.destination %>">
                        <div class="info grid-y">
                            <h3 class="EN mb-1">
                                <%= app.name %>
                            </h3>
                            <div class="grid-x-no">
                                <a href="http://<%= app.link %>" target="_blank">لینک وبسایت</a>
                                <a href="/applications/<%= app.slug %>">جزییات</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
                <div class="carousel grid-x">
                    <% applications.forEach(app => { %>
                    <div class="item card" onclick="">
                        <img src="<%= app.previewImage.destination %>">
                        <div class="info grid-y">
                            <h3 class="EN mb-1">
                                <%= app.name %>
                            </h3>
                            <div class="grid-x-no">
                                <a href="http://<%= app.link %>" target="_blank">لینک وبسایت</a>
                                <a href="/applications/<%= app.slug %>">جزییات</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </section>
</section>
<script src="/plugin/home/owlcarousel/owl.carousel.run.js"></script>
<%- include(viewPath('home/layout/footer')) %>